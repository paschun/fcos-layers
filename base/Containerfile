ARG BASE_IMAGE=quay.io/fedora/fedora-coreos:stable
FROM ${BASE_IMAGE}

RUN rpm-ostree install pv kitty fd-find ripgrep procs tree neovim bat man-db ranger btop et tmux tcpdump ldns-utils policycoreutils-python-utils qemu-guest-agent podman-tui restic rclone uv parted nmap-ncat buildah mtr inxi gdu 7zip strace xxhash fish \
    && ostree container commit

# https://coreos.github.io/rpm-ostree/container/#using-ostree-container-commit
